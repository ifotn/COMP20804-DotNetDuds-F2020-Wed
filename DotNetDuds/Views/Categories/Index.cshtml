@model IEnumerable<DotNetDuds.Models.Category>

<h1>Please choose a Product Category</h1>
<a asp-controller="Categories" asp-action="AddCategory" class="btn btn-primary">Add a New Category</a>
<ul>
    @foreach (var category in Model)
    {
        <li>
            <a asp-controller="Categories" asp-action="Browse" asp-route-category="@category.Name">
                @category.Name
            </a>
        </li>
    }
